{
    "compilerOptions": {
        "rootDir": "src",
        "declaration": true,
        "declarationDir": ".",
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "target": "es2017",
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
